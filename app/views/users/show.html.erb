<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>    
    </div>
    
    <div class="col-md-6">
      <h1>
        <%= @user.profile.first_name %> <%= @user.profile.last_name %>
      </h1>
      <h3>
        <%= @user.profile.job_title %>
      </h3>
      <div class="well profile-block profile_description">
        <h3>Description</h3>
        <%= @user.profile.description %>  
      </div>
      <% if user_signed_in? && (current_user.plan_id == 2 || current_user.id.to_s == params[:id].to_s) %>
        <div class="well profile-block profile-contact-info">
          <h3>Contact Information</h3>
          <%= @user.profile.phone_number %>
          <%= @user.profile.contact_email %>
        </div>
      <% end %>
      
      
    </div>
  </div>
</div>